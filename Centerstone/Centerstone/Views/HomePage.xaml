<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Centerstone.Views.HomePage"
    Title="Centerstone HIF App">
	<ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <!--<Label Text="You're almost ready to save money!" HorizontalOptions="Center" />-->
            <Button Text="Basic" Clicked="Handle_BasicInfoClicked" Style="{StaticResource buttonStyle}" />
            <Button Text="Household" Clicked="Handle_EnergyClicked" Style="{StaticResource buttonStyle}"/>
            <Button Text="People" Clicked="Handle_PeopleClicked" Style="{StaticResource buttonStyle}" />
            <Button Text="Images" Clicked="Handle_ImagesClicked" Style="{StaticResource buttonStyle}" />
            <Button Text="Tips" Clicked="Handle_TipsClicked" Style="{StaticResource buttonStyle}" />
            <Button Text="Start Over" Clicked="Handle_StartOver" />
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
