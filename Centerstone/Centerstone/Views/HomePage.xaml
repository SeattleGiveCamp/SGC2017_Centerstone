<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Centerstone.Views.HomePage"
    Title="Energy Assistance Application">
	<ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="This app will help you apply to Centerstone's Energy Assistance Program" HorizontalOptions="Center" />
            <Button Text="Basic Information" Clicked="Handle_BasicInfoClicked" />
            <Button Text="Heating Information" Clicked="Handle_EnergyClicked" />
            <Button Text="People in the Household" Clicked="Handle_PeopleClicked" />
            <Button Text="Ways to Conserve Energy" Clicked="Handle_TipsClicked" />
            <!--<Button Text="No Income Form" Clicked="Handle_IncomesClicked" />-->
            <Button Text="Submit Application" Clicked="Handle_Submit" Style="{StaticResource buttonStyle}" />
            <Button Text="Start Over" Clicked="Handle_StartOver" />
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
