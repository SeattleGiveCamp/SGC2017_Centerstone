@model Centerstone.MobileAppService.Data.IncomeRules

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>IncomeGuideline</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RowId" class="control-label"></label>
                <input asp-for="RowId" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="HouseholdSize" class="control-label"></label>
                <input asp-for="HouseholdSize" class="form-control" />
                <span asp-validation-for="HouseholdSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxIncome" class="control-label"></label>
                <input asp-for="MaxIncome" class="form-control" />
                <span asp-validation-for="MaxIncome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
